<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOur"
    tools:context=".MainActivity">


        <!--Phase One Text-->
        <TableLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello,"
                android:textColor="#fff"
                android:textStyle="italic|bold"
                android:layout_marginStart="10dp"
                android:textSize="40sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developer"
                android:layout_marginStart="10dp"
                android:textStyle="bold|italic"
                android:textColor="#fff"
                android:textSize="40sp"/>

            <!--Phase Two Coloums 3 and row 4-->
            <TableRow
                android:layout_marginTop="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:textStyle="italic|bold"
                    android:background="@drawable/white_curve">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:textStyle="italic|bold"
                    android:background="@drawable/white_curve">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:textStyle="italic|bold"
                    android:background="@drawable/white_curve">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:textStyle="italic|bold"
                    android:background="@drawable/white_curve">

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:textStyle="italic|bold"
                    android:background="@drawable/white_curve">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:textStyle="italic|bold"
                    android:background="@drawable/white_curve">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:textStyle="italic|bold"
                    android:background="@drawable/white_curve">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:textStyle="italic|bold"
                    android:background="@drawable/white_curve">

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:textStyle="italic|bold"
                    android:background="@drawable/white_curve">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:textStyle="italic|bold"
                    android:background="@drawable/white_curve">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:textStyle="italic|bold"
                    android:background="@drawable/white_curve">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:textStyle="italic|bold"
                    android:background="@drawable/white_curve">

                </LinearLayout>

            </TableRow>

            <View
                android:layout_marginTop="20dp"
                android:layout_height="1dp"
                android:background="#fff"
                android:layout_width="match_parent"/>




            <!--Phase Three columns 3-->
            <TableLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow>
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="10dp"
                        android:textStyle="italic|bold"
                        android:background="@drawable/white_curve">
                    </LinearLayout>
                </TableRow>

                <TableRow>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="10dp"
                        android:textStyle="italic|bold"
                        android:background="@drawable/white_curve">
                    </LinearLayout>
                </TableRow>
                <TableRow>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="90dp"
                        android:textStyle="italic|bold"
                        android:background="@drawable/white_curve">
                    </LinearLayout>
                </TableRow>


            </TableLayout>







            <!--Phase Four Columns 4 and row 2-->
            <TableLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:layout_marginBottom="50dp"
                >

                <TableRow>
                    <!--Stretch coloumn 0-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New"
                        android:textColor="#fff"
                        android:textStyle="italic|bold"
                        android:layout_marginStart="10dp"
                        android:textSize="20sp"/>

                    <!--Stretch coloumn 1-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:gravity="end"
                        android:text="Ctrl+O"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>
                    <!--Stretch coloumn 0-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open"
                        android:textColor="#fff"
                        android:textStyle="italic|bold"
                        android:layout_marginStart="10dp"
                        android:textSize="20sp"/>

                    <!--Stretch coloumn 1-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:gravity="right"
                        android:text="Ctrl+O+f8"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow>
                    <!--Stretch coloumn 0-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Setting"
                        android:textColor="#fff"
                        android:textStyle="italic|bold"
                        android:layout_marginStart="10dp"
                        android:textSize="20sp"/>

                    <!--Stretch coloumn 1-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:gravity="right"
                        android:text="Alt+K"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>
                    <!--Stretch coloumn 0-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Closed Project"
                        android:textColor="#fff"
                        android:textStyle="italic|bold"
                        android:layout_marginStart="10dp"
                        android:textSize="20sp"/>

                    <!--Stretch coloumn 1-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:gravity="right"
                        android:text="Shift+f6+M"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </TableRow>

            </TableLayout>

        </TableLayout>
    </ScrollView>
